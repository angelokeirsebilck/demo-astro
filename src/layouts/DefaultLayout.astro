---
import NavList from '@components/nav/NavList.astro';
import Router from '@components/Router.astro'

export interface Props {
	title: string;
	id: string;
	siteId: number;
	sectionHandle: string;
	typeHandle: string;
	lang: string;
	uri: string;
	slug: string;
	groupHandle: string;
}



const { title, id, siteId, sectionHandle, typeHandle, lang, uri, slug, groupHandle } = Astro.props as Props;

---

<!DOCTYPE html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>

		<NavList  siteId={siteId} lang={lang.substring(0,2)} />
		</header>
		<main class="container mx-auto">
			<Router {sectionHandle} {title} {uri} {slug} {typeHandle} {id} lang={lang.substring(0,2)} {siteId} {groupHandle}  />
		</main>
	</body>
</html>
