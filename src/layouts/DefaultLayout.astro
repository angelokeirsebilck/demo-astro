---
import Router from '@components/Router.astro'

export interface Props {
	title: string;
	id: string;
	siteId: number;
	sectionHandle: string;
	typeHandle: string;
	lang: string;
	uri: string;
	slug: string;
}

const { title, id, siteId, sectionHandle, typeHandle, lang, uri, slug } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main class="container mx-auto">
			<Router {sectionHandle} {title} {uri} {slug} {typeHandle} {id} {siteId}  />
		</main>
	</body>
</html>
