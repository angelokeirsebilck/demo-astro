---
export interface Props {
	title: string;
	id: string;
	siteId: number;
	sectionHandle: string;
	entryType: string;
	lang: string;
}

const { title, id, siteId, sectionHandle, entryType, lang } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main class="container mx-auto">
			<slot />
		</main>
	</body>
</html>
