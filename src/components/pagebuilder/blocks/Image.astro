---
import { Picture } from "@astrojs/image/components";

export interface Props {
  src: string;
  widths?: number[];
  aspectRatio?: number | `${number}:${number}` | undefined;
  sizes?: string;
}

const {
  src,
  widths = [375, 640, 768, 1024, 1280, 1536],
  aspectRatio = "16:9",
  sizes = "(max-width: 375px) 375px, (max-width: 640px) 640px, (max-width: 768px) 768px, (max-width: 1024px) 1024px, (max-width: 1280px) 1280px, 1536px",
} = Astro.props as Props;
---

<Picture src={src} widths={widths} aspectRatio={aspectRatio} sizes={sizes} />
